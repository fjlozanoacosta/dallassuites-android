<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.icogroup.dallassuites">

    <application
        android:allowBackup="true"
        android:icon="@drawable/home_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Home"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Rooms" android:screenOrientation="portrait" />
        <activity android:name=".Services" android:screenOrientation="portrait" />
        <activity android:name=".Profile" android:screenOrientation="portrait"/>
        <activity android:name=".Register" android:screenOrientation="portrait"/>
        <activity android:name=".Dallas_Popup" android:screenOrientation="portrait" android:theme="@android:style/Theme.Holo.Dialog"/>
        <activity android:name=".Restaurant" android:screenOrientation="portrait"/>
        <activity android:name=".Room360" android:screenOrientation="portrait"/>
        <activity android:name=".Edit" android:screenOrientation="portrait"/>
        <activity android:name=".Login" android:screenOrientation="portrait" android:theme="@android:style/Theme.Holo.Dialog"/>
        <activity android:name=".RestaurantDetail" android:screenOrientation="portrait"/>
        <activity android:name=".DOBPopup" android:screenOrientation="portrait" android:theme="@android:style/Theme.Holo.Dialog" />

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
