<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rooms_rooms_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rooms_img_suiteplus" />

    <TextView
        android:id="@+id/rooms_text_roomdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rooms_rooms_img"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:maxLines="2"
        android:text="Lorem ipsum dolor sit ament,\nconsecteur adipiscing elit."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/rooms_text_roomname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rooms_text_roomdescription"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Suite Plus"
        android:textColor="@color/white"
        android:textSize="22dp"/>

</RelativeLayout>