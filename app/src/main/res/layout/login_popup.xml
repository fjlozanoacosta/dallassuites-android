<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_popup_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/register_popup_background" />

    <ImageButton
        android:id="@+id/login_imagebutton_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@android:color/transparent"
        android:src="@drawable/close_selector" />

    <ImageView
        android:id="@+id/login_img_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_imagebutton_close"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:src="@drawable/register_user" />

    <EditText
        android:id="@+id/login_edittext_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/login_imagebutton_close"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignTop="@id/login_img_user"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/login_img_user"
        android:background="@android:color/transparent"
        android:text="USERNAME"
        android:textColor="@color/dallas_typeface_color" />


    <ImageView
        android:id="@+id/login_img_firstdivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_img_user"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/divider" />

    <ImageView
        android:id="@+id/login_img_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_img_firstdivider"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/register_password" />

    <EditText
        android:id="@+id/login_edittext_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/login_img_firstdivider"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/login_img_password"
        android:background="@android:color/transparent"
        android:layout_alignTop="@id/login_img_password"
        android:textColor="@color/dallas_typeface_color"
        android:inputType="textPassword"
        android:hint="@string/register_password"
        android:textColorHint="@color/dallas_typeface_color"/>


    <ImageView
        android:id="@+id/login_img_seconddivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_img_password"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/divider" />


    <ImageButton
        android:id="@+id/login_imagebutton_retrievepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/retrievepassword_button_selector"
        android:layout_below="@+id/login_img_seconddivider"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/register_popup_ok_selector"
        android:layout_alignBottom="@+id/login_popup_background"
        android:text="@string/login_login"
        android:textColor="@color/white"/>

</RelativeLayout>