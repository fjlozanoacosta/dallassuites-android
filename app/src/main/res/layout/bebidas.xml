<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/image_bebida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bullet"
        android:layout_marginTop="@dimen/imagebebida_margintop"
        android:layout_marginBottom="@dimen/imagebebida_marginbottom"
        android:layout_marginLeft="@dimen/bebidas_bullet_marginleft"
        />



    <TextView
        android:id="@+id/text_bebida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/image_bebida"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/textbebida_margintop"
        android:textSize="@dimen/textbebida_textsize"
        android:text="Bebidas"/>

    <ImageView
        android:id="@+id/restaurant_semilinea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/semilinea"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/image_bebida"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>



</RelativeLayout>