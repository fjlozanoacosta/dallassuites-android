<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dallas_brown_color"
    >

    <TextView
        android:id="@+id/rooms_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_rooms"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="@dimen/title_size"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dallas_typeface_color"
        android:layout_alignParentTop="true"
        />


    <ListView
        android:id="@+id/rooms_listview_rooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rooms_title"></ListView>


</RelativeLayout>