                android:id="@+id/restaurant_img_sandwiches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/restaurante_sandwiches" />

            <TextView
                android:id="@+id/restaurant_text_sandwiches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/restaurant_img_sandwiches"
                android:text="@string/restaurant_sandwiches"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/divider" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/restaurant_relativelayout_pizzas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/restaurant_button_selector">

            <Button
                android:id="@+id/restaurant_button_pizzas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/restaurant_button_selector" />

            <ImageView
                android:id="@+id/restaurant_img_pizzas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/restaurante_pizza" />

            <TextView
                android:id="@+id/restaurant_text_pizzas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/restaurant_img_pizzas"
                android:text="@string/restaurant_pizzas"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/divider" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/restaurant_relativelayout_postres"
            android:layout_width="match_parent"
