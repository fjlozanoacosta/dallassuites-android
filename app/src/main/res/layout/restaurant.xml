                android:background="@drawable/restaurant_button_selector" />

            <ImageView
                android:id="@+id/restaurant_img_restodeldia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/restaurante_restodeldia" />

            <TextView
                android:id="@+id/restaurant_text_restodeldia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@+id/restaurant_img_restodeldia"
                android:text="@string/restaurant_restodeldia"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/divider" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/restaurant_relativelayout_bebidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/restaurant_button_bebidas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/restaurant_button_selector" />

            <ImageView
                android:id="@+id/restaurant_img_bebidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:src="@drawable/restaurante_bebidas" />

            <TextView
                android:id="@+id/restaurant_text_bebidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
